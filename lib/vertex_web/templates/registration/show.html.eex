<h1><%= gettext("Profile") %></h1>

<ul>
  <li>
    <strong><%=gettext("Email") %>: </strong><%= @user.email %>
  </li>
  <li>
    <strong><%=gettext("Username") %>: </strong><%= @user.username %>
  </li>
  <li>
    <strong><%=gettext("Display Name") %>: </strong><%= @user.display_name %>
  </li>
  <li>
    <strong><%=gettext("Receive Email Notifications") %>: </strong> <%= if @user.email_notifications, do: "yes", else: "no" %>
  </li>
</ul>

<span><%= link gettext("Edit"), to: Routes.profile_path(@conn, :edit) %></span>

<h1>Show Avatar</h1>

<ul>

  <li>
    <strong><%=gettext("Name") %>: </strong><%= @avatar.name %>
  </li>

  <li>
    <strong><%=gettext("Description") %>: </strong><%= @avatar.description %>
  </li>

  <li>
    <strong><%=gettext("Is Public") %>: </strong><%= @avatar.is_public %>
  </li>

</ul>

<span><%= link gettext("Edit"), to: Routes.dashboard_avatar_path(@conn, :edit, @avatar) %></span>
<span><%= link gettext("Back"), to: Routes.dashboard_avatar_path(@conn, :index) %></span>
